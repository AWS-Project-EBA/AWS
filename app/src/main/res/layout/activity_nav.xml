<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/path"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center"
        android:background="#3fff">


        <Button
            android:id="@+id/my_career_path"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btncolor"
            android:text="My Career Path"
            android:textAllCaps="false"
            android:textColor="#FFFBF8" />
        <Button
            android:id="@+id/my_hr_manager"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btncolor"
            android:text="My HR Manager"
            android:textAllCaps="false"
            android:textColor="#FFFBF8" />
        <Button
            android:id="@+id/my_incoming_appointments"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btncolor"
            android:text="My Incoming Appointments"
            android:textAllCaps="false"
            android:textColor="#FFFBF8" />
        <Button
            android:id="@+id/my_past_appointments"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btncolor"
            android:text="My Past Appointments"
            android:textAllCaps="false"
            android:textColor="#FFFBF8" />
        <Button
            android:id="@+id/my_inbox"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btncolor"
            android:text="My Inbox"
            android:textAllCaps="false"
            android:textColor="#FFFBF8" />
        <Button
            android:id="@+id/my_agenda"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btncolor"
            android:text="My Agenda"
            android:textAllCaps="false"
            android:textColor="#FFFBF8" />
        <Button
            android:id="@+id/my_financial_situation"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btncolor"
            android:text="Finance"
            android:textAllCaps="false"
            android:textColor="#FFFBF8" />
        <Button
            android:id="@+id/my_services"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btncolor"
            android:text="Services"
            android:textAllCaps="false"
            android:textColor="#FFFBF8" />
        <Button
            android:id="@+id/my_service_locations"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btncolor"
            android:text="Service Locations"
            android:textAllCaps="false"
            android:textColor="#FFFBF8" />






    </LinearLayout>


</LinearLayout>